<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HumeAIPOCFrontEnd.MainPage">

    <VerticalStackLayout Padding="20">
        <Label Text="Hume AI Chat Configurator" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="UserInput" Placeholder="Type your message here..." />
        <Button Text="Send" Clicked="OnSendClicked" />
        <Label x:Name="ResponseLabel" Text="Response will appear here" />
    </VerticalStackLayout>

</ContentPage>

